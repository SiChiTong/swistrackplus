<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Read Circular Bar Code</friendlyname>
	<description>Detects ID and orientation of all robots by reading a circular bar code placed around the blob.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/IDReaderRing</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="double">
			<name>RingRadiusOuter</name>
			<label>RadiiOuter</label>
			<min>1</min>
			<max>70</max>
			<default>50</default>
			<unit>pixels</unit>
			<slider>true</slider>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="double">
			<name>RingRadiusInner</name>
			<label>RadiiInner</label>
			<min>10</min>
			<max>40</max>
			<default>16</default>
			<unit>pixels</unit>
			<reloadable>true</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>
